---
const banners = [
  {
    img: '/images/banner1.jpg',
    title: 'Seamless Mobility',
    desc: 'Experience effortless travel across the city with our integrated mobility solutions.',
  },
  {
    img: '/images/banner2.jpg',
    title: 'Eco-Friendly Options',
    desc: 'Choose from a range of sustainable transport modes for a greener tomorrow.',
  },
  {
    img: '/images/banner3.jpg',
    title: 'Smart Connectivity',
    desc: 'Stay connected and informed with real-time updates and smart features.',
  },
];
---
<section class="w-full py-12 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {banners.map(({ img, title, desc }) => (
        <div class="bg-white rounded-xl shadow-md overflow-hidden flex flex-col items-center text-center p-6 transition hover:shadow-lg">
          <img src={img} alt={title} class="w-24 h-24 object-cover rounded-full mb-4 border-4 border-primary-500" loading="lazy" />
          <h3 class="text-xl font-semibold text-primary-700 mb-2">{title}</h3>
          <p class="text-gray-600">{desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
