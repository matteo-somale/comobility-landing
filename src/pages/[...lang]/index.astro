---
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
import { getListPage, getSinglePage } from "@/lib/contentParser.astro";
import { supportedLang } from "@/lib/utils/languageParser";
import { markdownify } from "@/lib/utils/textConverter";
import CallToAction from "@/partials/CallToAction.astro";
import Testimonial from "@/partials/Testimonial.astro";
import ThreeBanners from "@/partials/ThreeBanners.astro";
import type { Feature } from "@/types";
import type { ContentEntryMap } from "astro:content";
import { FaCheck } from "react-icons/fa";

export function getStaticPaths() {
  const paths = supportedLang.map((lang) => ({
    params: { lang: lang || undefined },
  }));
  return paths;
}

const { lang } = Astro.params;
const homepage = await getListPage("homepage", lang as keyof ContentEntryMap);
const { banner, features } = homepage[0].data;
const allData = homepage[0].data as any;
const threebanner = allData.threebanner || allData.Threebanner || null;

const testimonial = await getSinglePage(
  "testimonialSection",
  lang as keyof ContentEntryMap,
  "testimonial",
);

const call_to_action = await getSinglePage(
  "ctaSection",
  lang as keyof ContentEntryMap,
  "call-to-action",
);
---

<Base>
  <!-- Banner -->
  <section class="section pt-14 pb-10">
    <div class="container">
      <div class="row justify-center">
        <div
          class="lg:col-7 md:col-9 mb-12 mt-8 text-center flex flex-col items-center justify-center"
        >
          {
            banner.image && (
              <div class="col-12 flex justify-center my-8">
                <ImageMod
                  src="/images/comobility-purple-long.svg"
                  height={480}
                  width={600}
                  alt="banner"
                  format="webp"
                />
              </div>
            )
          }
          <h1
            set:html={markdownify(banner.title)}
            class="mb-4 text-h3 lg:text-h1"
          />
          <p set:html={markdownify(banner.content)} class="mb-8" />
          {
            banner.button.enable && (
              <a
                class="btn btn-primary"
                href={banner.button.link}
                target={
                  banner.button.link.startsWith("http") ? "_blank" : "_self"
                }
                rel="noopener"
              >
                {banner.button.label}
              </a>
            )
          }
        </div>
        <div class="flex justify-center">
          <ImageMod
            src="/images/interreg-logo-alcotra-ita-fra.png"
            height={480 / 2}
            width={600 / 2}
            alt="banner"
            format="webp"
          />
        </div>
        <p class="text-center">Un progetto di cooperazione <b>alcotra</b></p>
      </div>
    </div>
  </section>
  <!-- /Banner -->

  <section class="section-sm" style="background-color: #165021 ;">
    <div class="container">
      <div class="items-center">
        <h6 class="text-white font-thin">
          Le città medie sono poli cruciali per le aree rurali. Tuttavia, qui il
          trasporto pubblico è spesso insufficiente e causa congestione,
          inquinamento, incidenti e perdita economica (solo il 4% della spesa
          per carburante resta sul territorio). Le fasce vulnerabili ne
          risentono maggiormente, con difficoltà di accesso a beni, sanità e
          lavoro, favorendo lo spopolamento.
        </h6>
        <h6 class="text-white pt-2 font-thin">
          Il progetto è sviluppato in collaborazione con il Consorzio Servizi
          Sociali IN.RE.TE. (Ivrea), l'ASL CN 2 - Ospedale di Verduno,
          Hautes-Alpes le Département in Francia. <br />La partnership
          pubblico-privata coinvolge: MobiCoop.fr, esperta di carpooling e
          MobilitySquare, che opera con il modello Trasporto COOP - Impresa
          Sociale, già attivo nelle Langhe con l'Ospedale di Verduno.
        </h6>
        <h6 class="text-white pt-2">
          Gli obiettivi: analizzare condizioni economiche, sociali e legali per
          il carpooling in Italia e per un modello cooperativo in Francia,
          creare una piattaforma MaaS OpenSource che integri trasporti
          cooperativi, solidali e pubblici.
        </h6>
      </div>
    </div>
  </section>

  <section class="section-sm">
    <div class="container">
      <div class="row items-center justify-between">
          <div class="flex flex-col lg:flex-row gap-8 w-full">
            <div class="flex-1">
              <h2 class="mb-4">Attività, impatti e risultati:</h2>
              <div class="mb-8 text-lg">
                <h5 class="">Le attività del progetto si dividono in: <br /></h5>
                <p>
                  <b>- WP1:</b> Governance e gestione amministrativa del progetto: con
                  controllo di primo livello e attività di coordinamento, riunioni e financial
                  reporting <br />
                  <b>- WP2:</b> Comunicazione: creazione di materiali di comunicazione,
                  conferenze e coinvolgimento esperti <br />
                  <b>- WP3:</b> Studio di fattibilità e coinvolgimento stakeholders: studio
                  dello stato dell’arte e della normativa e riunioni/interviste sul campo,
                  con un manuale (linee guida) come output <br />
                  <b>- WP4:</b> Software Platform Opensource Maas: analisi delle soluzioni
                  software esitendi e definizione delle specifiche di dettaglio, trasferimento
                  delle competenze tra i partner e sviluppo di nuove features, localizzazione
                  e demo. <br />
                  <b>- WP5:</b> Test sul campo: attivazione dei territori, monitoraggio
                  e reportistica e assunzione e formazione di autisti e noleggio/acquisto
                  furgoni. I principali impatti che ci aspettiamo di ottenere con il nostro
                  progetto sono: in primo luogo una maggiore inclusione sociale e il contrasto
                  alla “Mobility Poverty”, ma anche maggiore coesione comunitaria e valorizzazione
                  economica locale, oltre che,c ome naturale conseguenza, la riduzione
                  dell’inquinamento e della congestione.
                </p>
                <p>
                  I risultati saranno una piattaforma MaaS OpenSource funzionante,
                  con servizi pilota operativi , oltre che modelli legali e
                  organizzativi definiti sia per l’Italia, sia per la Francia. Il
                  principale risultato auspicabile è la replicabilità del progetto
                  su altri territori.
                </p>
              </div>
            </div>
            <div class="w-full lg:w-2/5 xl:w-1/3">
              <div class="overflow-x-auto">
                <table class="min-w-full border-collapse border border-gray-300">
                  <thead>
                    <tr class="bg-gray-800 text-white">
                      <th class="border border-gray-300 p-3"></th>
                      <th class="border border-gray-300 p-3">Budget totale</th>
                      <th class="border border-gray-300 p-3">Budget FEDER</th>
                      <th class="border border-gray-300 p-3">Controparite</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="border border-gray-300 p-3">IT</td>
                      <td class="border border-gray-300 p-3">409.321</td>
                      <td class="border border-gray-300 p-3">327.456,80</td>
                      <td class="border border-gray-300 p-3">81.864,20</td>
                    </tr>
                    <tr>
                      <td class="border border-gray-300 p-3">FR</td>
                      <td class="border border-gray-300 p-3">257.750</td>
                      <td class="border border-gray-300 p-3">327.456,80</td>
                      <td class="border border-gray-300 p-3">51.550</td>
                    </tr>
                    <tr>
                      <td class="border border-gray-300 p-3">Tot.</td>
                      <td class="border border-gray-300 p-3">667.071</td>
                      <td class="border border-gray-300 p-3">533.656,80</td>
                      <td class="border border-gray-300 p-3">133.414,20 </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Features -->
    {
      features.map((feature: Feature, index: number) => (
        <section class={`section-sm ${index % 2 === 0 && "bg-gradient"}`}>
          <div class="container">
            <div class="row items-center justify-between">
              <div
                class={`mb:md-0 mb-6 md:col-5 ${index % 2 !== 0 && "md:order-2"}`}
              >
                <ImageMod
                  src={feature.image}
                  height={480}
                  width={520}
                  alt={feature.title}
                  format="webp"
                />
              </div>
              <div
                class={`md:col-7 lg:col-6 ${index % 2 !== 0 && "md:order-1"}`}
              >
                <h2 set:html={markdownify(feature.title)} class="mb-4" />
                <p
                  set:html={markdownify(feature.content)}
                  class="mb-8 text-lg"
                />
                <ul>
                  {feature.bulletpoints.map((bullet: string) => (
                    <li class="relative mb-4 pl-6">
                      <FaCheck className={"absolute left-0 top-1.5"} />
                      <span set:html={markdownify(bullet)} />
                    </li>
                  ))}
                </ul>
                {feature.button.enable && (
                  <a class="btn btn-primary mt-5" href={feature.button.link}>
                    {feature.button.label}
                  </a>
                )}
              </div>
            </div>
          </div>
        </section>
      ))
    }

    <!-- ThreeBanners -->
    {
      threebanner && threebanner.items && (
        <section class="w-full py-12 bg-gray-50">
          <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-center my-8">{threebanner.heading}</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              {threebanner.items.map(({ img, title, content }: any) => (
                <div class="overflow-hidden flex flex-col items-center text-center p-6">
                  <img
                    src={img}
                    alt={title}
                    class="h-24 object-cover mb-4"
                    loading="lazy"
                  />
                  <h3 class="text-xl font-semibold text-primary-700 mb-2">
                    {title}
                  </h3>
                  <p set:html={markdownify(content)} class="text-gray-600" />
                </div>
              ))}
            </div>
          </div>
        </section>
      )
    }
    <!-- /ThreeBanners -->
    <!-- /Features -->

    <!-- <Testimonial testimonial={testimonial[0]} />-->
    <!-- <CallToAction call_to_action={call_to_action[0]} />-->
  </section>
</Base>
